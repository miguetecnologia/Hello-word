#include<Servo.h>
Servo servo1;
boolean estadoSensor=0;
void setup() {
  // put your setup code here, to run once:
pinMode(3,INPUT);
pinMode(13,OUTPUT);
pinMode(11,OUTPUT);
servo1.attach(9);
}

void loop(){
  // put your main code here, to run repeatedly:
        estadoSensor=digitalRead(3);
        digitalWrite(11,HIGH);
        if(estadoSensor==HIGH){
              digitalWrite(11,LOW);
              digitalWrite(13,HIGH);
              servo1.write(180);
              delay(3200);
              servo1.write(90);
              delay(4000);
              servo1.write(0);
              delay(3200);
        }
        else{
              digitalWrite(11,HIGH);
              digitalWrite(13,LOW);
              servo1.write(90);
              delay(1000);
              
        }
}  
